<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<p>
			<%= pluralize @post.errors.count, "error" %> prevented this post from saving
		</p>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<div>
		<%= f.label :title %>
		<br/>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :body %>
		<br/>
		<%= f.text_area :body %>
	</div>
	<div>
		<%= f.submit %>
	</div>
<% end %>