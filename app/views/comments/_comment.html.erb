<div class="comment">
	
	<div class="name">
		<%= comment.name %>
	</div>

	<div class="date">
		<%= time_ago_in_words comment.created_at %> Ago
		| <%= link_to "Delete", [comment.post, comment], method: :delete, data: {confirm: "Are you sure?"} %>
	</div>

	<div class="body">
		<%= comment.body %>
	</div>

</div>